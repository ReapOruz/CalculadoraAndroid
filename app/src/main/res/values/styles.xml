<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EstiloBotonesOperaciones" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@color/colorBotonOperaciones</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:foregroundTint">#FFFFFF</item>
        <item name="android:textColor">@color/colorTextoBotones</item>
    </style>

    <style name="EstiloBotonesNumeros" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@color/colorBotonNumero</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:foregroundTint">#FFFFFF</item>
        <item name="android:textColor">@color/colorTextoBotones</item>
    </style>

    <style name="EstiloBotonIgual" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@color/colorBotonIgual</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:foregroundTint">#FFFFFF</item>
        <item name="android:textColor">@color/colorTextoBotones</item>
    </style>

    <style name="fondoPantalla" >
        <item name="android:layout_width">348dp</item>
        <item name="android:layout_height">118dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/colorFondoPantalla</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextoPantalla</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="fondoCalculadora">
        <item name="android:background">@color/colorFondoCalculadora</item>
    </style>

</resources>